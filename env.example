# =============================================================================
# AI Career Copilot - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.example .env

# =============================================================================
# Google AI Platform (Required for all agents)
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=AIzaSyAs7ZHViC8_zXYA0Lfkam9JOmlEIgLvcSc

# =============================================================================
# MongoDB Cloud Atlas (Required for persistence)
# =============================================================================
# Connection string format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/a2a
MONGODB_DB=a2a

# =============================================================================
# Azure OpenAI (Required for LLM capabilities)
# =============================================================================
# Get these from your Azure OpenAI resource in Azure Portal
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# Azure OpenAI deployment names (configure these in Azure OpenAI Studio)
AZURE_OPENAI_DEPLOYMENT_GPT4O=gpt-4o
AZURE_OPENAI_DEPLOYMENT_GPT4O_MINI=gpt-4o-mini
AZURE_OPENAI_DEPLOYMENT_EMBEDDING_LARGE=text-embedding-3-large
AZURE_OPENAI_DEPLOYMENT_EMBEDDING_SMALL=text-embedding-3-small

# =============================================================================
# UI Configuration
# =============================================================================
# Host and port for the UI server
A2A_UI_HOST=0.0.0.0
A2A_UI_PORT=12000

# Debug mode for development
DEBUG_MODE=false

# =============================================================================
# Agent Registration (Auto-discovery for UI)
# =============================================================================
# Comma-separated list of agent URLs for auto-registration
# Format: http://host:port,http://host:port,...
# Default ports for each agent:
# - Orchestrator: 11001
# - Onboarding: 11002
# - Profile Graph: 11003
# - Job Ingestor: 11004
# - Matcher: 11005
# - Resume Tailor: 11006
# - Comms: 11007
# - Tracker: 11008
# - Apply: 11009
# - Referral Planner: 11010
# - Outreach: 11011
# - Compliance: 11012
# - Interview Coach: 11013
# - Negotiation Coach: 11014
# - Prompt Library: 11015
# - Voice: 11016
# - Partner APIs: 11017
# - Multilingual: 11018
A2A_AGENT_URLS=http://localhost:11001,http://localhost:11002,http://localhost:11003,http://localhost:11004,http://localhost:11005,http://localhost:11006,http://localhost:11007,http://localhost:11008,http://localhost:11009,http://localhost:11010,http://localhost:11011,http://localhost:11012,http://localhost:11013,http://localhost:11014,http://localhost:11015,http://localhost:11016,http://localhost:11017,http://localhost:11018

# =============================================================================
# Twilio Configuration (Optional - for SMS/WhatsApp/Voice)
# =============================================================================
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# Azure AI Search (Optional - for RAG capabilities)
# =============================================================================
# Get these from your Azure AI Search resource in Azure Portal
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your_azure_search_api_key_here
AZURE_SEARCH_INDEX_NAME=a2a-documents

# =============================================================================
# Azure Blob Storage (Optional - for file storage)
# =============================================================================
# Get these from your Azure Storage Account in Azure Portal
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=a2a-artifacts

# =============================================================================
# Azure Service Bus (Optional - for async messaging)
# =============================================================================
# Get these from your Azure Service Bus namespace in Azure Portal
AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=your_key_name;SharedAccessKey=your_key

# =============================================================================
# Azure Redis Cache (Optional - for caching)
# =============================================================================
# Get these from your Azure Redis Cache in Azure Portal
AZURE_REDIS_CONNECTION_STRING=your_redis_connection_string_here

# =============================================================================
# Azure Application Insights (Optional - for monitoring)
# =============================================================================
# Get this from your Application Insights resource in Azure Portal
AZURE_APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=your_instrumentation_key_here

# =============================================================================
# Azure AD B2C (Optional - for authentication)
# =============================================================================
# Get these from your Azure AD B2C tenant in Azure Portal
AZURE_AD_B2C_TENANT_NAME=your_tenant_name
AZURE_AD_B2C_CLIENT_ID=your_client_id_here
AZURE_AD_B2C_CLIENT_SECRET=your_client_secret_here

# =============================================================================
# Security Configuration (CRITICAL - Configure these for production)
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Authentication and Authorization
SECURITY_ENABLE_AUTH=true
SECURITY_JWT_SECRET=your-super-secret-jwt-key-change-in-production
SECURITY_JWT_ALGORITHM=HS256
SECURITY_JWT_EXPIRY_HOURS=24

# Rate Limiting
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_RATE_LIMIT_WINDOW=60
SECURITY_RATE_LIMIT_MAX_REQUESTS=100

# Input Validation
SECURITY_MAX_REQUEST_SIZE=10485760
SECURITY_MAX_STRING_LENGTH=1000
SECURITY_MAX_USER_ID_LENGTH=100

# Password Policy
SECURITY_PASSWORD_MIN_LENGTH=12
SECURITY_PASSWORD_REQUIRE_UPPERCASE=true
SECURITY_PASSWORD_REQUIRE_LOWERCASE=true
SECURITY_PASSWORD_REQUIRE_DIGIT=true
SECURITY_PASSWORD_REQUIRE_SPECIAL=true

# Session Management
SECURITY_SESSION_TIMEOUT=3600
SECURITY_MAX_FAILED_LOGINS=5
SECURITY_ACCOUNT_LOCKOUT_DURATION=900

# CORS and Host Security
SECURITY_ENABLE_CORS=true
SECURITY_ENABLE_TRUSTED_HOSTS=true
SECURITY_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:12000,http://127.0.0.1:3000,http://127.0.0.1:12000
SECURITY_TRUSTED_HOSTS=localhost,127.0.0.1,::1,0.0.0.0

# Security Headers
SECURITY_ENABLE_SECURITY_HEADERS=true
SECURITY_ENABLE_HSTS=true
SECURITY_ENABLE_CSP=true
SECURITY_ENABLE_XSS_PROTECTION=true

# Logging and Monitoring
SECURITY_ENABLE_AUDIT_LOGGING=true
SECURITY_ENABLE_SECURITY_MONITORING=true
SECURITY_LOG_SENSITIVE_DATA=false

# Database Security
SECURITY_ENABLE_INPUT_SANITIZATION=true
SECURITY_ENABLE_QUERY_VALIDATION=true
SECURITY_MAX_QUERY_COMPLEXITY=10

# API Security
SECURITY_ENABLE_API_RATE_LIMITING=true
SECURITY_ENABLE_REQUEST_VALIDATION=true
SECURITY_ENABLE_RESPONSE_ENCRYPTION=false

# =============================================================================
# Development & Testing
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable/disable detailed logging
VERBOSE_LOGGING=false

# Test mode (disables external API calls)
TEST_MODE=false

# =============================================================================
# Security & Compliance
# =============================================================================
# Encryption key for sensitive data (generate a secure random key)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# JWT secret for token signing (generate a secure random secret)
JWT_SECRET=your_jwt_secret_here

# Session timeout in seconds
SESSION_TIMEOUT=3600

# =============================================================================
# Rate Limiting
# =============================================================================
# Maximum requests per minute per user
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Maximum API calls per hour per user
RATE_LIMIT_API_CALLS_PER_HOUR=1000

# =============================================================================
# Cost Control
# =============================================================================
# Maximum tokens per request
MAX_TOKENS_PER_REQUEST=4000

# Maximum cost per day in USD
MAX_DAILY_COST_USD=10.00

# Enable cost monitoring
ENABLE_COST_MONITORING=true
